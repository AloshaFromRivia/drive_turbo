<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewData["Title"]</title>
    @*Bootstrap*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>

@* Header *@
<div class="collapse" id="navbarToggleExternalContent">
  <nav class="py-2 bg-light border-bottom">
    <div class="container d-flex flex-wrap">
      <ul class="nav me-auto">
        <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="nav-link px-2" aria-current="page">Главная</a></li>
        <li class="nav-item"><a asp-controller="Home" asp-action="Catalog" class="nav-link px-2">Каталог</a></li>
        <li class="nav-item"><a asp-controller="Home" asp-action="Reviews" class="nav-link px-2">Отзывы</a></li>
        <li class="nav-item"><a asp-controller="Home" asp-action="About" class="nav-link px-2">О Нас</a></li>
      </ul>
      <ul class="nav">
        <li class="nav-item"><a asp-controller="Cart" asp-action="Index" class="nav-link px-2"><i class="fa-solid fa-cart-shopping"></i> Корзина</a></li>
        @if (!User.Identity.IsAuthenticated)
        {
          <li class="nav-item"><a asp-controller="Account" asp-action="Login" class="nav-link px-2"><i class="fa-solid fa-right-to-bracket"></i> Войти</a></li>
          <li class="nav-item"><a asp-controller="Account" asp-action="Registration" class="nav-link px-2"><i class="fa-solid fa-user"></i> Регистрация</a></li>
        }
        else
        {
          <li class="nav-item"><a href="#" class="nav-link px-2">Добро пожаловать, @User.Identity.Name</a></li>
          <li class="nav-item"><a asp-controller="Account" asp-action="Logout" class="nav-link px-2"><i class="fa-solid fa-user"></i> Выйти</a></li>
        }
      </ul>
    </div>
  </nav>
</div>
<nav class="navbar navbar-light border-bottom py-2">
  <div class="container d-flex flex-wrap justify-content-center">
    <button class="navbar-toggler m-2" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
    <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center mb-3 mb-lg-0 me-lg-auto text-dark text-decoration-none">
      <img src="/img/logo-icon.svg" width="32" height="32"/>
      <span class="fs-4"><span class="text-danger">Drive</span>Turbo</span>
    </a>
    <ul class="nav">
      <li class="nav-item"><a class="nav-link link-dark px-2"><i class="fa-solid fa-phone"></i> +7(999)-999-99-99</a></li>
    </ul>
  </div>
</nav>
 <nav class="py-2 bg-light border-bottom">
    <div class="container d-flex flex-wrap">
      <ul class="nav me-auto">
        <li class="nav-item"><a asp-controller="Product" asp-action="Index" class="nav-link px-2" aria-current="page">Продукты</a></li>
        <li class="nav-item"><a asp-controller="Category" asp-action="Index" class="nav-link px-2">Категории</a></li>
        <li class="nav-item"><a asp-controller="Order" asp-action="Index" class="nav-link px-2">Заказы</a></li>
      </ul>
    </div>
  </nav>
<div class="container d-flex flex-column min-vh-100">
  
  @* Display page content *@
  @RenderBody()

  @* Footer *@
  <footer class="footer py-5 mt-auto border-top">
      <div class="row">
       
        <div class="col-2">
          <h5>Контакты</h5>
          <ul class="nav flex-column">
            <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">ВКонтакте</a></li>
            <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">YouTube</a></li>
            <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Insagram</a></li>
            <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">FAQs</a></li>
            <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">About</a></li>
          </ul>
        </div>
  
        <div class="col-2">
          <h5>Карта сайта</h5>
          <ul class="nav flex-column">
            <li class="nav-item mb-2"><a asp-controller="Home" asp-action="Index" class="nav-link p-0 text-muted">Главная</a></li>
            <li class="nav-item mb-2"><a asp-controller="Home" asp-action="Catalog" class="nav-link p-0 text-muted">Каталог</a></li>
            <li class="nav-item mb-2"><a asp-controller="Home" asp-action="About" class="nav-link p-0 text-muted">О Нас</a></li>
            <li class="nav-item mb-2"><a asp-controller="Home" asp-action="Reviews" class="nav-link p-0 text-muted">Отзывы</a></li>
          </ul>
        </div>
  
        <div class="col-4 offset-1">
          <form>
            <h5>Подпишитесь на новостную рассылку</h5>
            <p>Будьте в курсе о всех акциях нашего магазина</p>
            <div class="d-flex w-100 gap-2">
              <label for="newsletter1" class="visually-hidden">Адрес e-mail</label>
              <input id="newsletter1" type="text" class="form-control" placeholder="Email адрес">
              <button class="btn btn-primary" type="button">Подписаться</button>
            </div>
          </form>
        </div>
      </div>
  
      <div class="d-flex justify-content-between py-4 my-4 border-top">
        <p>© 2022 Иванов Григорий П-18-1, Все права защищены</p>
        <ul class="list-unstyled d-flex">
          <li class="ms-3"><a class="link-dark" href="#"><i class="fa-brands fa-vk"></i></a></li>
          <li class="ms-3"><a class="link-dark" href="#"><i class="fa-brands fa-instagram"></i></a></li>
          <li class="ms-3"><a class="link-dark" href="#"><i class="fa-brands fa-youtube"></i></a></li>
        </ul>
      </div>
    </footer>
</div>
@* Bootstrap js *@
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
@* FontAwesome *@
<script src="https://kit.fontawesome.com/2bbfa3fb57.js" crossorigin="anonymous"></script>
</body>
</html>