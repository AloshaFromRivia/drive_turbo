<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewData["Title"]</title>
    @*Bootstrap*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>

@* Header *@
<div class="collapse" id="navbarToggleExternalContent">
  <nav class="py-2 bg-light border-bottom">
    <div class="container d-flex flex-wrap">
      <ul class="nav me-auto">
        <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="nav-link px-2" aria-current="page">Главная</a></li>
        <li class="nav-item"><a asp-controller="Home" asp-action="Catalog" class="nav-link px-2">Каталог</a></li>
        <li class="nav-item"><a asp-controller="Home" asp-action="Reviews" class="nav-link px-2">Отзывы</a></li>
        <li class="nav-item"><a asp-controller="Home" asp-action="About" class="nav-link px-2">О Нас</a></li>
      </ul>
      <ul class="nav">
        <li class="nav-item"><a href="#" class="nav-link px-2"><i class="fa-solid fa-right-to-bracket"></i> Войти</a></li>
        <li class="nav-item"><a href="#" class="nav-link px-2"><i class="fa-solid fa-user"></i> Регистрация</a></li>
      </ul>
    </div>
  </nav>
</div>
<nav class="navbar navbar-light border-bottom mb-4 py-2">
  <div class="container d-flex flex-wrap justify-content-center">
    <button class="navbar-toggler m-2" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
    <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center mb-3 mb-lg-0 me-lg-auto text-dark text-decoration-none">
      <img src="/img/logo-icon.svg" width="32" height="32"/>
      <span class="fs-4"><span class="text-danger">Drive</span>Turbo</span>
    </a>
    <ul class="nav">
      <li class="nav-item"><a class="nav-link link-dark px-2">+7(999)-999-99-99</a></li>
    </ul>
  </div>
</nav>

<div class="container">
  
  @* Display page content *@
  @RenderBody()

  @* Footer *@
  <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
    <div class="col-md-4 d-flex align-items-center">
      <a href="/" class="mb-3 me-2 mb-md-0 text-muted text-decoration-none lh-1">
        <svg class="bi" width="30" height="24"><use xlink:href="#bootstrap"></use></svg>
      </a>
      <span class="text-muted">© 2022 Григорий Иванов, П-18-1</span>
    </div>
    <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
      <li class="ms-3"><a class="text-muted" href="#"><img src="/img/vk-icon.svg" width="24" height="24"/></a></li>
      <li class="ms-3"><a class="text-muted" href="#"><img src="/img/youtube-icon.svg" width="24" height="24"></a></li>
      <li class="ms-3"><a class="text-muted" href="#"><img src="/img/ok-icon.svg" width="24" height="24"></a></li>
    </ul>
  </footer>
</div>
@* Bootstrap js *@
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
@* FontAwesome *@
<script src="https://kit.fontawesome.com/2bbfa3fb57.js" crossorigin="anonymous"></script>
</body>
</html>