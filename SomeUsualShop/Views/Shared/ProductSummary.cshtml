@model Product

 <div class="col p-2 m-1">
            <div class="card mb-3 h-100" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="/img/products/oil1.png" class="img-fluid rounded-start" alt="..." style="max-height: 150px; max-width: 150px">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@Model.Name</h5>
                            <p class="card-text">@Model.Description</p>
                            <p class="card-text"><small class="text-muted">@Model.Price.ToString("C")</small></p>
                            <form id="@Model.Id" asp-action="AddToCart"
                                      asp-controller="Cart" method="post">
                                    <input type="hidden" asp-for="Id" />
                                    <input type="hidden" name="returnUrl"
                                           value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
                                    <button type="submit"
                                                class="btn btn-success btn-sm pull-right">
                                            В корзину
                                    </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
