@model RegistrationModel

@{
    ViewBag.Title = "Регистрация";
    Layout = "_Layout";
}

<div class="text-danger" asp-validation-summary="All"></div>
<div class="row">
    <div class="form-signin col-8 col-md-4 offset-2 offset-md-4">
        <form asp-action="Registration" method="post">
            <h1 class="h3 mb-3 fw-normal text-center">Регистрация</h1>
            <input type="hidden" asp-for="ReturnUrl"/>
            <div class="form-floating my-1">
                <input asp-for="Name" class="form-control" placeholder="name@example.com">
                <label asp-for="Name"></label>
            </div>
            <div class="form-floating my-1">
                <input class="form-control" asp-for="Email" placeholder="Password">
                <label asp-for="Email"></label>
            </div>
            <div class="form-floating my-1">
                <input class="form-control" asp-for="Password" placeholder="Password">
                <label asp-for="Password"></label>
            </div>

            <button class="w-100 btn btn-lg btn-primary my-1" type="submit">Регистрация</button>
            <a asp-controller="Account" asp-action="Login" class="nav-link">Вход</a>
        </form>
    </div>
    <div class="col"></div>
</div>

