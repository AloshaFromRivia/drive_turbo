@model LoginModel

@{
    ViewBag.Title = "Вход";
    Layout = "_Layout";
}

<div class="text-danger" asp-validation-summary="All"></div>
<div class="row">
    <div class="form-signin col-md-4 offset-md-4">
        <form asp-action="Login" method="post">
            <h1 class="h3 mb-3 fw-normal text-center">Вход</h1>
            <input type="hidden" asp-for="ReturnUrl"/>
            <div class="form-floating my-1">
                <input asp-for="Email" class="form-control" placeholder="name@example.com">
                <label asp-for="Email"></label>
            </div>
            <div class="form-floating my-1">
                <input class="form-control" asp-for="Password" placeholder="Password">
                <label asp-for="Password"></label>
            </div>

            <button class="w-100 btn btn-lg btn-primary my-1" type="submit">Войти</button>
            <a asp-controller="Account" asp-action="Registration" class="nav-link">Регистрация</a>
        </form>
    </div>
</div>

